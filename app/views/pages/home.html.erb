<div class="flex flex-col md:flex-row h-screen">
  <!-- Sidebar -->
  <aside class="w-full md:w-1/3 lg:w-1/4 bg-white p-4 border-r border-gray-200 overflow-y-auto">
    <h1 class="text-2xl font-bold text-teal-600 mb-4">Changer la vie</h1>

    <!-- Recherche -->
    <form method="get" action="/" class="relative mb-4">
      <input 
        type="text" 
        name="search" 
        placeholder="Rechercher un lieu..." 
        class="w-full pl-10 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-teal-500"
      >
      <div class="absolute left-3 top-2.5 text-gray-400">
        <i class="fas fa-search"></i>
      </div>
    </form>

    <!-- Catégories -->
    <h2 class="font-semibold text-lg mb-2">Catégories</h2>
    <div class="flex flex-wrap gap-2 mb-4">
      <% categories = {
        "all" => ["Tout", "bg-teal-500"],
        "charity" => ["Aide", "bg-pink-500"],
        "education" => ["Éducation", "bg-yellow-500"],
        "health" => ["Santé", "bg-blue-500"]
      } %>

      <% categories.each do |key, (label, color)| %>
        <% active = params[:category] == key || (key == "all" && params[:category].blank?) %>
        <%= link_to root_path(category: key == "all" ? nil : key), class: "px-3 py-1 rounded-full text-sm font-medium #{active ? "#{color} text-white" : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}" do %>
          <%= label %>
        <% end %>
      <% end %>
    </div>

    <!-- Liste des lieux -->
    <div class="space-y-3">
      <% @locations.each do |location| %>
        <div class="bg-white border rounded-lg p-3 shadow-sm hover:shadow-md cursor-pointer" data-location-id="<%= location.id %>">
          <h3 class="font-semibold text-gray-800"><%= location.name %></h3>
          <p class="text-sm text-gray-500"><%= location.address %></p>
        </div>
      <% end %>
    </div>
  </aside>

  <!-- Carte -->
  <main class="flex-1 relative">

<div class="hidden md:block md:w-2/3 lg:w-3/4" data-controller="map" data-map-target="container" style="height: calc(100vh - 80px); position: relative;"></div>





