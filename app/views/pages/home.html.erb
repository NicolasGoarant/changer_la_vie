<div class="flex flex-col md:flex-row flex-1">
  <div class="md:w-1/3 lg:w-1/4">
    <div class="bg-white md:h-screen md:overflow-hidden flex flex-col">
      <div class="p-4 sticky top-0 bg-white z-10 border-b border-neutral-200">
        <form action="/" method="get" class="mb-4">
          <div class="relative">
            <input 
              type="text" 
              name="search" 
              placeholder="Rechercher un lieu, une activité..." 
              class="w-full pl-10 pr-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
            >
            <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-neutral-400">
              <i class="fa-solid fa-search h-4 w-4"></i>
            </div>
          </div>
        </form>
        
        <h2 class="font-semibold text-lg mb-3">Catégories</h2>
        <div class="flex flex-wrap gap-2">
          <button class="category-badge px-3 py-1.5 rounded-full text-sm font-medium transition-all bg-primary text-white">
            Tout voir
          </button>
          <button class="category-badge px-3 py-1.5 rounded-full text-sm font-medium transition-all bg-neutral-200 text-neutral-700 hover:bg-primary hover:text-white">
            <i class="fa-solid fa-hand-holding-heart mr-1"></i>
            Aide caritative
          </button>
          <button class="category-badge px-3 py-1.5 rounded-full text-sm font-medium transition-all bg-neutral-200 text-neutral-700 hover:bg-primary hover:text-white">
            <i class="fa-solid fa-graduation-cap mr-1"></i>
            Éducation
          </button>
          <button class="category-badge px-3 py-1.5 rounded-full text-sm font-medium transition-all bg-neutral-200 text-neutral-700 hover:bg-primary hover:text-white">
            <i class="fa-solid fa-heart-pulse mr-1"></i>
            Santé
          </button>
        </div>
      </div>
      
      <div class="flex-1 overflow-auto p-4">
        <!-- Liste des localisations -->
        <div id="locations-list">
          <% Location.all.each do |location| %>
            <div class="bg-white rounded-xl shadow-sm border border-neutral-200 mb-4 overflow-hidden hover:shadow-md cursor-pointer">
              <div class="w-full h-40 overflow-hidden">
                <img 
                  src="<%= location.image_url %>" 
                  alt="<%= location.name %>" 
                  class="w-full h-full object-cover transition-transform duration-300 hover:scale-105" 
                >
              </div>
              <div class="p-4">
                <div class="flex justify-between items-start">
                  <h3 class="font-semibold text-lg"><%= location.name %></h3>
                  <span class="bg-primary text-white text-xs font-bold px-2 py-1 rounded-full">
                    <%= location.category.humanize %>
                  </span>
                </div>
                <p class="text-sm text-neutral-500 mt-1"><%= location.address %></p>
                <p class="text-sm mt-3"><%= location.description %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="md:w-2/3 lg:w-3/4 h-[calc(100vh-80px)]" 
       data-controller="map"
       data-map-target="container">
    <!-- La carte sera chargée ici -->
  </div>
</div>